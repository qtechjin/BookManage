<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-autowire="byName">

    <!--<context:annotation-config/>-->
    <!--<context:component-scan base-package="com.xiaomi.example" />-->

    <bean id="userRepository" class="com.xiaomi.example.dal.repository.impl.DefaultUserRepository" />
    <bean id="orderRepository" class="com.xiaomi.example.dal.repository.impl.DefaultOrderRepository" />
    <bean id="userLogin" class="com.xiaomi.example.service.impl.UserServiceImpl" />

    <bean id="userServlet" class="com.xiaomi.example.servlet.UserServlet" />
    <bean id="bookServlet" class="com.xiaomi.example.servlet.BookServlet" />

    <import resource="classpath:META-INF/spring/cxf-service.xml" />
    <import resource="classpath:META-INF/spring/data-config.xml" />
    <import resource="classpath:META-INF/spring/dispatcher-servlet.xml" />

</beans>